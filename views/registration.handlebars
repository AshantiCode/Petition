    <div class="registration-form">

        <form method='post' action='/registration'>

            <label for="firstName">First Name</label>
            <input type="text" name='first' id='firstName'>
            <br><br>
            <label for="lastName">Last Name</label>
            <input type="text" name='last' id='lastName'>
            <br><br>
            <label for="email">Email </label>
            <input type="email" name='email' id='email'>
            <br><br>
            <label for="password">Password (4 characters min.)</label>
            <input type="password" name='password' id='pass' minlength="4" required>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <br><br>
            <button id='register-btn'>Register!</button>

        </form>
        <br><br><br>
        <p>Already a member? Please <a href="/login">Log In </a></p>

    </div>

</div>